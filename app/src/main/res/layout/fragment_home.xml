<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aura_charcoal"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/aura_logo"
                android:contentDescription="@string/app_name" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="AURA"
            android:textColor="@color/aura_cream"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"
            android:text="Your personal mood-based music companion."
            android:textColor="@color/aura_accent_muted"
            android:textSize="16sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:columnCount="2"
            android:rowCount="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHappy"
                style="@style/MoodCard"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="8dp">
                <LinearLayout style="@style/MoodCard.Content">
                    <ImageView
                        style="@style/MoodCard.Icon"
                        android:src="@drawable/ic_mood_happy"
                        android:contentDescription="Happy Mood"/>
                    <TextView
                        style="@style/MoodCard.Text"
                        android:text="Happy"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardChill"
                style="@style/MoodCard"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginStart="8dp">
                <LinearLayout style="@style/MoodCard.Content">
                    <ImageView
                        style="@style/MoodCard.Icon"
                        android:src="@drawable/ic_mood_chill"
                        android:contentDescription="Chill Mood"/>
                    <TextView
                        style="@style/MoodCard.Text"
                        android:text="Chill"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <Button
            android:id="@+id/goToMusicPlayerButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="Go to My Music"
            android:textColor="@color/aura_cream"
            android:textSize="16sp"
            app:strokeColor="@color/aura_accent_muted" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"
            android:text="Crafted with â¤ï¸ and ðŸ¦– by Sridhar"
            android:textColor="@color/aura_accent_muted"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>