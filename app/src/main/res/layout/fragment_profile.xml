<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aura_charcoal"
    android:fillViewport="true"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/layoutProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/dm_sans"
            android:text="@string/profile"
            android:textAlignment="center"
            android:textColor="@color/aura_cream"
            android:textSize="36sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgGalleryPreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:srcCompat="@drawable/ic_profile_placeholder"
            app:strokeColor="#4A4A4A"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="@string/full_name"
            android:textColor="@color/aura_cream"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="@string/username"
            android:textColor="@color/aura_accent_muted"
            android:textSize="20sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="32dp"
            android:useDefaultMargins="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCurrentMood"
                style="@style/MoodCard">
                <LinearLayout style="@style/MoodCard.Content">
                    <ImageView
                        style="@style/MoodCard.Icon"
                        android:id="@+id/imageCurrentMood"
                        android:src="@drawable/ic_mood_happy"
                        android:contentDescription="@string/current_mood"/>
                    <TextView
                        style="@style/MoodCard.Text"
                        android:id="@+id/textCurrentMood"
                        android:text="@string/current_mood"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGoToPlayer"
                style="@style/MoodCard">
                <LinearLayout style="@style/MoodCard.Content">
                    <ImageView
                        style="@style/MoodCard.Icon"
                        android:src="@drawable/ic_playlist"
                        android:contentDescription="@string/go_to_music_player"/>
                    <TextView
                        style="@style/MoodCard.Text"
                        android:text="@string/music_player"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVibeRecap"
                style="@style/MoodCard">
                <LinearLayout style="@style/MoodCard.Content">
                    <ImageView
                        style="@style/MoodCard.Icon"
                        android:src="@drawable/ic_headphones"
                        android:contentDescription="@string/vibe_recap"/>
                    <TextView
                        style="@style/MoodCard.Text"
                        android:text="@string/vibe_recap"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSettings"
                style="@style/MoodCard">
                <LinearLayout style="@style/MoodCard.Content">
                    <ImageView
                        style="@style/MoodCard.Icon"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="@string/settings"/>
                    <TextView
                        style="@style/MoodCard.Text"
                        android:text="@string/settings"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"
            android:text="Crafted with ❤️ and 🦖 by Sridhar"
            android:textColor="@color/aura_accent_muted"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>