<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AURA" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/aura_charcoal</item>
        <item name="colorPrimaryVariant">@color/black</item> <item name="colorOnPrimary">@color/aura_cream</item> <item name="android:windowBackground">@color/aura_charcoal</item>
        <item name="android:textColor">@color/aura_cream</item>
        <item name="android:textColorHint">@color/aura_accent_muted</item>

        <item name="colorAccent">@color/aura_accent_muted</item>
        <item name="colorSecondary">@color/aura_accent_muted</item>
        <item name="colorOnSecondary">@color/aura_charcoal</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="MoodCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="cardBackgroundColor">#3C3C3C</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="MoodCard.Content" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MoodCard.Icon" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MoodCard.Text" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/aura_cream</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="SettingsCard" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">#3C3C3C</item> <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/aura_cream</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/aura_cream</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/aura_charcoal</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/aura_charcoal</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_final</item>
        <item name="postSplashScreenTheme">@style/Theme.AURA</item>
    </style>
</resources>